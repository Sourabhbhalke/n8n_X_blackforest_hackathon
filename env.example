# Environment Configuration for Real Estate Personalization App
# Copy this file to .env and fill in your actual values

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/real_estate_personalization
DB_HOST=localhost
DB_PORT=5432
DB_NAME=real_estate_personalization
DB_USER=your_db_user
DB_PASSWORD=your_db_password

# n8n Configuration
N8N_HOST=localhost
N8N_PORT=5678
N8N_PROTOCOL=http
N8N_WEBHOOK_URL=http://localhost:5678/webhook

# BlackForest Labs / Flux API
FLUX_API_KEY=your_flux_api_key_here
FLUX_API_URL=https://api.bfl.ai/v1/flux-kontext-pro
FLUX_WEBHOOK_SECRET=your_webhook_secret

# LLM Configuration (OpenAI, Anthropic, etc.)
OPENAI_API_KEY=your_openai_api_key
ANTHROPIC_API_KEY=your_anthropic_api_key
LLM_MODEL=gpt-4
LLM_TEMPERATURE=0.7

# Frontend Configuration
NEXT_PUBLIC_API_URL=http://localhost:3001/api
NEXT_PUBLIC_N8N_WEBHOOK_URL=http://localhost:5678/webhook

# Backend Configuration
BACKEND_PORT=3001
BACKEND_HOST=localhost
JWT_SECRET=your_jwt_secret_key
SESSION_SECRET=your_session_secret

# File Storage
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760
ALLOWED_IMAGE_TYPES=jpg,jpeg,png,webp

# Redis (for caching and sessions)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your_redis_password

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password

# Development/Production
NODE_ENV=development
LOG_LEVEL=info
DEBUG=false
